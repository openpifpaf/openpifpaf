[BASIC]

variable-rgx=[a-z0-9_]{1,30}$
good-names=ap,ar,ax,d,f,g,gt,i,im,lr,r,s,t,t1,t2,th,v,x,x1,x2,y,xy


[TYPECHECK]

# List of members which are set dynamically and missed by pylint inference
# system, and so shouldn't trigger E1101 when accessed. Python regular
# expressions are accepted.
generated-members=numpy.*,torch.*,cv2.*,openpifpaf.functional.*

ignored-modules=openpifpaf.functional,pycocotools


disable=E1102,missing-docstring,useless-object-inheritance,duplicate-code,too-many-arguments,too-many-instance-attributes,too-many-locals,too-few-public-methods,unsupported-assignment-operation,no-member,invalid-sequence-index
# temp for pylint bug with numpy zeros_like(https://github.com/PyCQA/pylint/issues/2721):
# unsupported-assignment-operation,no-member,invalid-sequence-index
